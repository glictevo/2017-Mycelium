      <a href="{{ path('lictevel_mycelium_statistiques') }}" class="list-group-item">Statistiques</a>
    </div>

    {% if (app.session.has('champignon')) and (app.session.get('champignon') != null) %}
      {{ include('LictevelMyceliumBundle:Mycelium:stocks.html.twig', { 'champignon': app.session.get('champignon')} ) }}
    {% endif %}
  </div>

{% else %}

{% endif %}
