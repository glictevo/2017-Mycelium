{# src/Lictevel/MyceliumBundle/Resources/views/Mycelium/production.html.twig #}


{% extends "LictevelMyceliumBundle::layout.html.twig" %}


{% block title %}{{ parent() }} - Production{% endblock %}


{% block body %}

  <h1>Mes productions</h1>

  {% for message in app.session.flashbag.get('notice') %}
    <p> {{ message }} </p>
  {% endfor %}

  {% if champignon != null %}

    <p>
      {% if champignon.image != null %}
        <img src="{{ champignon.image.url }}" alt="{{ champignon.image.alt }}">
      {% else %}
        <p> Photo manquante </p>
      {% endif %}

      Nom : {{ champignon.name }} <br>
      <br>
      Taille du myc√©lium : {{ champignon.tailleMycelium }} <br>

      <br>
      {{ include('LictevelMyceliumBundle:Mycelium:prod.html.twig', { 'champignon': champignon} ) }}
      <br>
      {{ include('LictevelMyceliumBundle:Mycelium:stocks.html.twig', { 'champignon': champignon} ) }}


    </p>
  {% endif %}

{% endblock %}
