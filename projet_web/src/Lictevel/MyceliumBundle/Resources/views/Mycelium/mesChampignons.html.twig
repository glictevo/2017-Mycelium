{# src/Lictevel/MyceliumBundle/Resources/views/Mycelium/mesChampignons.html.twig #}


{% extends "LictevelMyceliumBundle::layout.html.twig" %}


{% block title %}{{ parent() }} - Mes champignons{% endblock %}


{% block body %}

  {% if listChampignons != null %}

    {% for message in app.session.flashbag.get('notice') %}
      <p> {{ message }} </p>
    {% endfor %}

    {% for champignon in listChampignons %}
      <p>Champignon : {{ champignon.name }}</p> <button type="button" name="button"><a href="{{ path('lictevel_mycelium_changer_champignon', { 'id': champignon.id}) }}">Choisir ce champignon pour jouer</a></button>
    {% endfor %}

  {% else %}
    <p>Vous n'avez pas de champignons !</p>
  {% endif %}

  {{ form(form) }}
  ----------------------
  Mes champignons
  ----------------------

{% endblock %}
